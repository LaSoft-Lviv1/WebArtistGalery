
<form action="#" method="POST" id="collector-register">


    <div class="modal-body">
      <div class="container-fluid">
        <h4 class="text-center">Insert new password</h4>
        <hr>
        <div class="well">
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-12 col-sm-5">
                        <label class="pull-right" for="password">Password: </label>
                    </div>
                    <div class="col-xs-12 col-sm-6">
                        <input type="password" id="password" class="form-group" placeholder="mySecretPass">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-12 col-sm-5">
                        <label class="pull-right" for="password_confirmation">Confirm: </label>
                    </div>
                    <div class="col-xs-12 col-sm-6">
                        <input type="password" id="password_confirmation" class="form-group" placeholder="mySecretPass">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-13 col-sm-6">
                        <button type="submit" class="btn btn-primary edit-password">Change password</button>
                    </div>
                </div>
            </div>
        </div> <!-- /.well -->
      </div>
      <!-- /.container-fluid -->
    </div>
</form>
